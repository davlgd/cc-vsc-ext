{
  "name": "clever-code",
  "displayName": "clever-code",
  "description": "Manage your Clever Cloud's applications, add-ons, data from Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clever-code",
          "title": "Clever Cloud",
          "icon": "assets/clevercloud.svg"
        }
      ]
    },
    "views": {
      "clever-code": [
        {
          "type": "webview",
          "id": "ccApp",
          "name": "Clever Cloud Application",
          "contextualTitle": "Application Details"
        }
      ]
    },
    "commands": [
      {
        "command": "clever-code.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "clever-code.applications",
        "title": "Applications"
      },
      {
        "command": "clever-code.profile",
        "title": "Show Clever Cloud Profile Information"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  },
  "dependencies": {
    "@clevercloud/client": "^9.1.0"
  }
}
